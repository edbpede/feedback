---
import { App } from "@components/App";
import "highlight.js/styles/github-dark.css";
---

<!doctype html>
<html lang="da" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="dark light" />
    <title>Feedback Bot til Studerende</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Inline script to prevent FOUC (Flash of Unstyled Content) -->
    <script is:inline>
      (function() {
        const STORAGE_KEY = "theme-preference";
        const DEFAULT_THEME = "dark";

        const stored = localStorage.getItem(STORAGE_KEY);
        const theme = stored === "light" || stored === "dark" ? stored : DEFAULT_THEME;

        if (theme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      })();
    </script>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 transition-colors duration-200">
    <App client:load />
  </body>
</html>

<style is:global>
  /* Prose typography styles for markdown rendering */
  .prose {
    line-height: 1.6;
  }

  .prose > *:first-child {
    margin-top: 0;
  }

  .prose > *:last-child {
    margin-bottom: 0;
  }

  /* Headings */
  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    font-weight: 600;
    line-height: 1.3;
    margin-top: 1em;
    margin-bottom: 0.5em;
  }

  .prose h1 { font-size: 1.5em; }
  .prose h2 { font-size: 1.3em; }
  .prose h3 { font-size: 1.15em; }
  .prose h4, .prose h5, .prose h6 { font-size: 1em; }

  /* Paragraphs */
  .prose p {
    margin-top: 0.75em;
    margin-bottom: 0.75em;
  }

  /* Lists */
  .prose ul, .prose ol {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
    padding-left: 1.5em;
  }

  .prose ul {
    list-style-type: disc;
  }

  .prose ol {
    list-style-type: decimal;
  }

  .prose li {
    margin-top: 0.25em;
    margin-bottom: 0.25em;
  }

  .prose li > ul, .prose li > ol {
    margin-top: 0.25em;
    margin-bottom: 0.25em;
  }

  /* Code blocks */
  .prose pre {
    margin-top: 0.75em;
    margin-bottom: 0.75em;
    padding: 0.75em 1em;
    border-radius: 0.5em;
    overflow-x: auto;
    font-size: 0.875em;
    background-color: #0d1117;
  }

  .prose pre code {
    background: none;
    padding: 0;
    font-size: inherit;
    color: inherit;
  }

  /* Inline code */
  .prose code {
    font-family: ui-monospace, SFMono-Regular, "SF Mono", Menlo, Consolas, "Liberation Mono", monospace;
    font-size: 0.875em;
    padding: 0.2em 0.4em;
    border-radius: 0.25em;
    background-color: rgba(0, 0, 0, 0.1);
  }

  .dark .prose code {
    background-color: rgba(255, 255, 255, 0.1);
  }

  /* Blockquotes */
  .prose blockquote {
    margin-top: 0.75em;
    margin-bottom: 0.75em;
    padding-left: 1em;
    border-left: 3px solid #3b82f6;
    font-style: italic;
    color: inherit;
    opacity: 0.9;
  }

  /* Links */
  .prose a {
    color: #3b82f6;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose a:hover {
    color: #2563eb;
  }

  /* Bold and italic */
  .prose strong {
    font-weight: 600;
  }

  .prose em {
    font-style: italic;
  }

  /* Horizontal rules */
  .prose hr {
    margin-top: 1.5em;
    margin-bottom: 1.5em;
    border: none;
    border-top: 1px solid currentColor;
    opacity: 0.2;
  }

  /* Tables */
  .prose table {
    width: 100%;
    margin-top: 0.75em;
    margin-bottom: 0.75em;
    border-collapse: collapse;
    font-size: 0.875em;
  }

  .prose th, .prose td {
    padding: 0.5em 0.75em;
    border: 1px solid rgba(128, 128, 128, 0.3);
  }

  .prose th {
    font-weight: 600;
    text-align: left;
    background-color: rgba(0, 0, 0, 0.05);
  }

  .dark .prose th {
    background-color: rgba(255, 255, 255, 0.05);
  }

  /* Small prose variant */
  .prose-sm {
    font-size: 0.925rem;
  }

  /* Inverted prose for user messages (light text on dark background) */
  .prose-invert a {
    color: #93c5fd;
  }

  .prose-invert a:hover {
    color: #bfdbfe;
  }

  .prose-invert code {
    background-color: rgba(255, 255, 255, 0.15);
  }

  .prose-invert pre {
    background-color: rgba(0, 0, 0, 0.3);
  }

  .prose-invert blockquote {
    border-left-color: rgba(255, 255, 255, 0.5);
  }
</style>
